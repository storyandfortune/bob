        font-weight: normal;
        font-style: normal; 
        font-display: swap; 
      }

{% endstyle %}

{{ 'animate.min.css' | asset_url | stylesheet_tag }}
{{ 'landing-hv.css' | asset_url | stylesheet_tag }}

<!-- start app -->
<div id="app">
    <!-- start container -->
    <div class="landing-container-hv">
       <!-- TITLE  -->
       <div class="title">
        <!-- <img src="https://cdn.shopify.com/s/files/1/0593/5942/8759/files/h-v-header-alt.png?v=1727369976" width="100%" height="auto"> -->
    </div>

        <div v-if="ready" class="page-continaer-hv">

     
            <!-- BODY -->

            <!-- FORM -->
            <div class="form-container animate__animated animate__jello animate__delay-1s">
        
                <!-- Thanks -->
                <div v-if="formState.thanks" class="message animate__animated animate__jello">
                    <h1>Thanks!</h1>
                    <p>${formState.message}</p>
                </div>

                <!-- Verify -->
                <div v-if="formState.verify" class="message animate__animated animate__jello">
                    <h1>Verify</h1>
                    <p>${formState.message}</p><div class="fit"><h2>${email.address}</h2></div> <p>Please click on the link in the email to verify your address.</p>
                    <p class="resend" @click="verifyEmail()">Didn't get email? Check your spam or <span>click here to resend.</span></p>
                </div>

                <!-- Error -->
                <div v-if="formState.error" class="message animate__animated animate__jello">
                    <h1>Error</h1>
                    <p>${formState.message}</p>
                </div>

                <!-- Form -->
                <div v-if="formState.form" class="form animate__animated animate__zoomIn animate__delay-1s">
                   
                    <div class="form-header" v-if="!email.sending">
                      <!-- <h1>Enter to Play</h1> -->
                        <p>Enter your e-mail to play the Game. Solve the puzzle, and you'll win a free sticker! Be sure to check your inbox for verification.</p>
                    </div>

                    <div v-if="!email.valid" class="error_msg">Please enter a valid e-mail.</div>
                    <div v-if="!email.sending">

                        <div class="name">

                            <input v-model="firstName" 
                            type="text" 
                            @blur="scrollPageUp"
                            placeholder="First Name"/>

                            <input v-model="lastName" 
                                type="text" 
                                @blur="scrollPageUp"
                                placeholder="Last Name"/>
                        </div>

                        <div class="email" 
                            :class="{'error': !email.valid}">

                            <div class="email-container">

                                <input v-model="email.address" 
                                    id="email"  
                                    type="email" 
                                    placeholder="Email"
                                    @blur="scrollPageUp"
                                    v-on:keyup.enter="addEmail()"
                                    @focus="resetEmail()"/>

                                    <div class="subscribe"
                                        :class="{'error': !subscribe}">
                                        <input v-model="subscribe" type="checkbox" @click="subscribe = !subscribe"/> 
                                        <span v-if="subscribe">I agree to receive emails from Bob's Big Boy Burbank.</span>
                                        <span v-else>You have to subscribe to enter the contest.</span>
                                    </div>

                                <div class="submit_btn" 
                                    @click="initGame()"> 
                                   <h2>Enter</h2>
                                </div>

                                <!-- 
                                <div class="submit_btn" 
                                    @click="verifyEmail()"> 
                                   <h2>Enter</h2>
                                </div>
                                 -->

                          
                            </div>

                        </div>

                    </div>

                    <!-- sending -->
                    <div v-if="email.sending" class="sending">
                        <img src="https://cdn.shopify.com/s/files/1/0593/5942/8759/files/sending.svg?v=1716235513" width="100%" height="auto">
                    </div>
                </div>

                <!-- Game -->
                <div class="game-container" v-if="game">
                    <button id="shuffleBtn" class="hv-btn" @click="startGame" :style="{ display: gameActive ? 'none' : 'block' }">Start Game</button>
                    <div id="countdown" :style="{ display: gameActive ? 'block' : 'none' }">${ timeLeft }</div>
                    <div id="puzzle" ref="puzzle">
                        <div
                          v-for="(piece, index) in pieces"
                          :key="piece.order"
                          class="piece"
                          :class="{ active: piece === activePiece }"
                          :style="getPieceStyle(piece)"
                          @click="handlePieceClick(piece)"
                        ></div>
                      </div>
                  
                    
                    <div id="alert" :class="{ active: showAlert }">
                        <div id="win" v-if="showWinAlert">
                            <!-- <img id="winSticker" :src="randBob" alt="Win sticker" width="100%" height="auto"> -->
                            <button id="playAgain" @click="closeAlert">Play Again</button>
                        </div>
                        <div id="loose" v-if="showLooseAlert">
                            <p>Time's up! Try again.</p>
                            <button id="tryAgain" @click="closeAlert">Try Again</button>
                        </div>
                    </div>

                </div>
            
            </div>

        <!-- end page container -->
        </div>

    <!-- end container -->
    </div>
<!-- end app -->
</div>


<script src="{{ 'howler.min.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'vue.global.js' | asset_url }}" defer="defer"></script>
