
{% style %}

      @font-face {
        font-family: "AvenirNextLTPro-Medium";
        src: url( {{- 'font-avenir-next_light.eot' | asset_url -}} );
        src: url( {{- 'font-avenir-next_light.eot?#iefix' | asset_url -}} ) format("embedded-opentype"),
          url(  {{- 'font-avenir-next_light.woff2' | asset_url -}} ) format("woff2"), url( {{- 'font-avenir-next_light.woff' | asset_url -}} ) format("woff"),
          url( {{- 'font-avenir-next_light.svg#OTS-derived-font' | asset_url -}} ) format("svg");
        font-weight: normal;
        font-style: normal;
      }
    
      @font-face {
        font-family: "AvenirNextLTPro-Bold";
        src: url(  {{- 'font-avenir-next_medium.eot' | asset_url -}} );
        src: url( {{- 'font-avenir-next_medium.eot?#iefix' | asset_url -}} ) format("embedded-opentype"),
          url( {{- 'font-avenir-next_medium.woff2' | asset_url -}} ) format("woff2"), url(  {{- 'font-avenir-next_medium.woff' | asset_url -}} ) format("woff"),
          url(    {{- 'font-avenir-next_medium.svg#OTS-derived-font' | asset_url -}} ) format("svg");
        font-weight: normal;
        font-style: normal;
      }



{% endstyle %}

{{ 'animate.min.css' | asset_url | stylesheet_tag }}
{{ 'landing-75th.css' | asset_url | stylesheet_tag }}

<!-- start app -->
<div id="app">
    <!-- start container -->
    <div class="landing-container-75th">

        <div class="page-continaer-75th">

            <!-- TITLE  -->
            <div class="title animate__animated animate__zoomIn ">
                <img src="https://cdn.shopify.com/s/files/1/0593/5942/8759/files/2nd-chance-sweepstakes-header.svg?v=1716234879" width="100%" height="auto">
            </div>
            <!-- BODY -->

            <!-- FORM -->
            <div v-if="live" class="form-container animate__animated animate__jello animate__delay-1s">
        
                <!-- Thanks -->
                <div v-if="sent" class="form animate__animated animate__jello">
                    <img src="https://cdn.shopify.com/s/files/1/0593/5942/8759/files/thanks.svg?v=1716235513" width="100%" height="auto">
                </div>

                <div v-else class="form animate__animated animate__zoomIn animate__delay-1s">
                    <img src="https://cdn.shopify.com/s/files/1/0593/5942/8759/files/enter-to-win.svg?v=1716234879" width="100%" height="auto">
                    <div v-if="!email.valid" class="error_msg">Please enter a valid e-mail.</div>
                    <div v-if="!email.sending">

                        <div class="name">

                            <input v-model="firstName" 
                            type="text" 
                            placeholder="First Name"/>

                            <input v-model="lastName" 
                                type="text" 
                                placeholder="Last Name"/>
                        </div>

                        <div class="email" 
                            :class="{'error': !email.valid}">

                            <div class="email-container">

                                <input v-model="email.address" 
                                    id="email"  
                                    type="email" 
                                    placeholder="Email"
                                    v-on:keyup.enter="addEmail()"
                                    @focus="resetEmail()"/>

                                <div class="submit_btn" 
                                    @click="addEmail()"> 
                                    <img src="https://cdn.shopify.com/s/files/1/0593/5942/8759/files/submit.svg?v=1716234878" width="100%" height="auto">
                                </div>

                            </div>

                        </div>

                    </div>
                    <div v-if="email.sending" class="sending">
                        <img src="https://cdn.shopify.com/s/files/1/0593/5942/8759/files/sending.svg?v=1716235513" width="100%" height="auto">
                    </div>
                </div>
            
            </div>

            <!-- LIST -->
            <div class="list-container" 
                :class="{'show': showModal}">
                <div class="list" @click="toggleModal()">
                    <img src="https://cdn.shopify.com/s/files/1/0593/5942/8759/files/list-of-prizes.svg?v=1716234878" width="100%" height="auto">
                </div>
                <ul v-if="showModal">
                    <li>15” M3 MacBook Air Laptop  <span>1:25000 / 1 Total</span> </li>
                    <li>11” Apple iPad Pro <span>1:5000 / 5 Total</span></li>
                    <li>75th Anniversary T-Shirt <span>3:1000 / 75 Total</span></li>
                    <li>75th Anniversary Mug <span>3:1000 / 75 Total</span></li>
                    <li>75th Anniversary Coin <span> 3:1000 / 75 Total</span></li>
                    <li>$20 Gift Certificate <span>3:1000 / 75 Total</span></li>
                    <li>Free Hot Fudge Cake <span>2:25 / 2000 Total</span></li>
                    <li>75th Anniversary Souvenir Cup <span>1:25 / 1000 Total</span></li>
                    <li>75th Anniversary Sticker <span>21.7:25 / 21694 Total</span></li>
                </ul>
            </div>

        <!-- end page container -->
        </div>

    <!-- end container -->
    </div>
<!-- end app -->
</div>




