

<div id="wish-list-drawer" class="wish-list">

    <!-- start app -->

    
            <div id="wish-list-header" class="">
                <div class="close"> 
                    {% render 'icon-times-solid' %}
                </div>
                <h3>Wishlist</h3>

                <div class="account">
                   
                </div>

                <div class="sign-on">
                    <div class="e-mail-input">
                        <input id="emailAddress"type="text" v-bind="email.address" placeholder="Enter your e-mail" /> <button>Enter</button>
                    </div>
                    <p></p>
                </div>

                <div class="sending">
                    <div class="icon">{% render 'icon-spinner-third' %}</div> <div>Sending...</div>
                </div>

            </div>

            <ul class="product-list">
               
            </ul>


</div>


<style>

    /*  
    on 
    isActive
    */

    .wish-list{
        position:fixed;
        visibility:hidden;
        top:0;
        right:-45vw;
        width:35vw;
        max-width:350px;
        height:100vw;
        padding:175px 35px;
        background-color:#FFF;
        -webkit-box-shadow: -19px 12px 15px -20px rgba(0,0,0,0.34);
        transition: all .5s ease;
        z-index:3;
    }

    .wish-list.on{
        visibility:visible;
        right:0;
    }


    /* user logged in */ 
    /*-------------------------------------------------------- */

    .wish-list.isActive #wish-list-header .account,
    .wish-list.isActive .product-list{
        display:block;
    }

    .wish-list.isActive #wish-list-header .sign-on{
        display:none;
    }

    /* user logged out */ 
    .wish-list #wish-list-header .account,
    .wish-list .product-list
    {
        display:none;
    }

    .wish-list #wish-list-header .sign-on{
        display:block;
    }

    /*-------------------------------------------------------- */

    .wish-list #wish-list-header {
        position:relative;
        border-bottom:1px solid #ccc;
    }



    /* sending ------ */
    .wish-list #wish-list-header.isSending .sign-on {
        display:none;
    }

    .wish-list #wish-list-header.isSending .sending {
        display:flex;
    }

    .wish-list #wish-list-header .sending{
        display:none;
        margin:2rem .25rem;
     }

     .wish-list #wish-list-header .sending .icon{
        width:25px;
        height:25px;
        transform: rotate(0deg);
        margin-right:20px;

        animation-name:spin;
        animation-duration: .5s;
        animation-iteration-count: infinite;
     }

     @keyframes spin{
        0% {
            transform: rotate(0deg);
          }
        100% {
            transform: rotate(360deg);
        }
      }


    /* error ------ */
    .wish-list #wish-list-header.error {
        color:red;
    }
    .wish-list #wish-list-header.error .sign-on .e-mail-input input{
        border:1px solid red;
        color:red;
    }
    
    .wish-list #wish-list-header h3{
        font-family: "AvenirNextLTPro-Bold";
        text-transform:uppercase;
        font-size:3rem;
        color:var(--bob-red);
        margin:0;
        padding:0; 
    }

    .wish-list #wish-list-header .close{
        position:absolute;
        top:0;
        right:0;
        width:18px;
        opacity:.5;
        cursor:pointer;
        transition:all .25s ease;
    }

    .wish-list #wish-list-header .close:hover{
        opacity:1;
    }
    

    .wish-list #wish-list-header p{
        font-size:1.5rem; 
        line-height:2rem;
        margin:2rem .25rem;
        padding:0;
    }
    

    /* sign on ---------------- */
    .wish-list #wish-list-header .sign-on .e-mail-input{
        margin: 1rem 0 0 0;
        display:flex;
    }

    .wish-list #wish-list-header .sign-on .e-mail-input input,
    .wish-list #wish-list-header .sign-on .e-mail-input button
    {
        font-size:1.75rem;
        padding: 1rem;
    }

    .wish-list #wish-list-header .sign-on .e-mail-input input{
        flex:1;
        border:1px solid #ccc;
        outline:none;
    }

    .wish-list #wish-list-header .sign-on .e-mail-input input :active{
        outline:none;
        -webkit-box-shadow:none;
    }

    .wish-list #wish-list-header .sign-on .e-mail-input button{
        border:1px solid var(--bob-red);
        color:white;
        text-transform:uppercase;
        background-color:var(--bob-red);
        cursor:pointer;
    }

    /* Product List */
    .wish-list .product-list{
        margin:1rem 0;
        padding:0;
        list-style:none;
        width:100%;
        height:calc(100vh - 250px);
        overflow-x:hidden;
        overflow-y:scroll;
    }

    .wish-list .product-list li{
        position:relative;
        margin-bottom:10px;
        text-align:center;
    }

    .wish-list .product-list li .remove{
        position:absolute;
        top:20px;
        right:0;
        width:15px;
        cursor:pointer;
        aspect-ratio:1/1;
        color:black;
        opacity:.5;
        transition:all .25s ease;
        z-index:10;
    }


    .wish-list .product-list li .remove:hover{
        opacity:1;
    }

    .wish-list .product-list li .appened-product{
        display:block;
        position:relative;
        color:black;
        text-decoration:none;
        transition:all .25s ease;

    }

    .wish-list .product-list li .appened-product .appened-image{
        display:block;
        width:100%;
        aspect-ratio: 1/1;
        background-size:contain;
        background-position:center center;
        background-repeat:no-repeat;
    }

    .wish-list .product-list li .appened-product .add_wishlist_btn{
        display:block;
        width:100%;
        padding:1rem;
        color:white;
        border:none;
        cursor:pointer;
        background-color:var(--bob-red);
        font-family:var(--bold);
        text-transform:uppercase;

    }

    .wish-list .product-list li .appened-product .title{
        font-size:2rem;
        margin:0;
        padding:0;
    }

  
</style>
