{{ 'spin-2-win.css' | asset_url | stylesheet_tag }}

<!--- SPIN 2 WIN --->  
{% form 'contact' %}

    <div class="spin-win">

        <div class='bg'>  

            <!-- confirm email -->
            {% if form.posted_successfully? %}
                 
             <div class="claimed"> 
                <div class="claimed-box">
                    <h2>Here's your code:</h2>
                    <div class="code">COUPON-CODE</div>
                    <a data-ref="{{ routes.root_url }}discount/" href=""> Use your code now!</a>
                </div>
            </div>
                    
            {% else %}

            <div id="title">
                <h2>Spin to Win</h2>
                <span>Spin the wheel for a chance to win!</span>
            </div>

         
            <div class="game">

                <div id="spin">

                    <div class="triangle"></div>
                    <div id="mainbox" class="mainbox">

                        <div id="box" class="box">

                            <div class="box1">
                                <span class="top" data-deg="45"><b class="noselect">25% off</b></span>
                                <span class="right" data-deg="135"><b class="noselect">20% off</b></span>
                                <span class="left" data-deg="315"><b class="noselect">15% off</b></span>
                                <span class="bottom" data-deg="225"><b class="noselect">10% 0ff</b></span>
                            </div>

                            <div class="box2">
                                <span class="top" data-deg="0"><b class="noselect">Beef Patty </b></span>
                                <span class="right" data-deg="90"><b class="noselect">Free Stickers</b></span>
                                <span class="left" data-deg="270"><b class="noselect">Free Emoji</b></span>
                                <span class="bottom" data-deg="180"><b class="noselect">Free Postcard</b></span>
                            </div>
                    
                        </div>

                        <div class="spin-btn noselect"> SPIN </div>
                    </div>

                </div>
                
                <div id="win">

                    <div class="email">
                        <input id="email"  type="email" name="contact[email]" placeholder="Enter your email address"/>
                        <input id="submit_btn" type="submit" value="Submit" />
                    </div>

                    <div class="prize">
                        <img src='https://cdn.shopify.com/s/files/1/0593/5942/8759/files/Giftcard.png?v=1638921067' width="auto" height="auto" loading="lazy" />
                    </div>

                </div>

            </div>
   
    
            {% endif %}
      
            <div class="gameboy">
                <img src='https://cdn.shopify.com/s/files/1/0593/5942/8759/files/Bob_Hand_Up.svg?v=1664321479' width="auto" height="auto" loading="lazy" />
            </div>


        </div>


        <div class="checkerboard"></div>

    </div>

{% endform %}
<script src="{{ 'howler.min.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'spin-2-win.js' | asset_url }}" defer="defer"></script>